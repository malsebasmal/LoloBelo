---
interface Props {
  title: string;
  description: string;
  priceOne: string;
  priceSecond: string;
  route: string;
  altImg: string;
}

const { route, title, description, priceOne, priceSecond, altImg } = Astro.props;
---

<div class="container">
  <h2>{title}</h2>
  <div class="prices">
    <span>S/.{priceOne}</span>
    <span>S/.{priceSecond}</span>
  </div>
  <img src={route} alt={altImg} />
  <div class="text">
    <p>{description}</p>
  </div>
</div>

<style>

  .text {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .container {
    background-color: #ffffff;

    width: clamp(9rem, 100vw, 18rem);
    height: 20rem;

    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.7rem;
    
    padding: 1rem;
    
    border: 1px solid #0000001f;
    box-shadow: #ea33334e 0px 4px 8px -1px;
    h2{
      font-size: clamp(1.5em, 6vw, 2em);
      line-height: 2.5rem;
      text-wrap: balance;

      background-image: linear-gradient(45deg, #fee438 0%, #ea3333 74%);
      text-shadow: 0px 4px 8px #ea33334e;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; 
    }
  }
  .prices {
    display: flex;
    gap: 1.5rem;

    span {
        font-size: clamp(1em, 4vw,1.5em);
    }
  }
  img {
    width: 100%;
    height: 45%;
    border-radius: 5%;
  }
  p {
    font-size: clamp(0.8em, 3vw, 1em);
    letter-spacing: 0.5px;
    line-height: 1.4em;
    text-wrap: balance;
  }

  @media (width <= 400px) {
    p {
      line-height: 1.2em;
    }
    h2 {
      line-height: 1.7rem !important;
    }
  }
</style>
