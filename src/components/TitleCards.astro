---
interface Props {
  title: String;
}

const { title } = Astro.props;
---

<div class="div">
  <h2 class="div__h2">{title}</h2>
</div>

<style>
  h2 {
    font-size: clamp(3.5em, 6vw, 4.5em);
    line-height: 5rem;

    margin-bottom: 1.5rem;

    background-image: linear-gradient(75deg, #ea3333 0%, #FF9400 74%);
    text-shadow: 0px 4px 8px #ff950065;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent; 
  }
</style>