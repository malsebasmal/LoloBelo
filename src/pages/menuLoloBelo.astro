        altImg="LaContinental"
        description="Queso Mozarella, Salsa, Jamón, Salame, Tiritas de Tocino, Carne, Queso Doble."
      />
      <CardMenu
        slot="recommending"
        title="Full Cabanossi"
        priceOne="16.00"
        priceSecond="32.00"
        route="./cabonossi.webp"
