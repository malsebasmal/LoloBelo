      <CardMenu
        slot="specials"
        title="Brasilera"
        priceOne="16.00"
        priceSecond="32.00"
        route="./americana.webp"
        altImg="Brasilera"
        description="Queso Mozarella, Salsa, Jamón, Lomito Ahumado, Tiritas de Tocino."
